<div class="container">
  <div class="row my-3">
    <div class="col-10 offset-1">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table border-bottom">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%=  link_to l(order.created_at, format: :default), admin_order_path(order.id), class:"border-bottom", style:"color:gray;" %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.sum(:product_quantity) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>