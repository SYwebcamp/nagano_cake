<div class="container">
  <div class="row my-5">
    <div class="col-md-2 offset-1 text-center">
      <h4 style="background:lightgray;">ジャンル編集</h4>
        <% if @genre.errors.any? %>
            <%= @genre.errors.count %>件のエラーが発生しました
            <ul>
                <% @genre.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <div class="row my-3">
      <div class="col-md-2 offset-1">
        <%= f.label :name, "ジャンル名", class:"col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    </div>



    <% end %>

</div>