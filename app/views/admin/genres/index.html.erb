<h4>ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, :placeholder => "ジャンル名"%>
  <%= f.submit "新規登録", class:"btn btn-primary bg-success" %>
<% end %>

<h5>ジャンル</h5>
<% @genres.each do |genre| %>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="name">
        <%= genre.name %>
      </td>
      <td class="edit"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary bg-success", method: :get %></td>
      </tr>
  </tbody>
  </table>
<% end %>