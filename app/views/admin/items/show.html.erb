<div class="container">
  <div class="row my-3">
    <div class="col-12">
      <h4>商品詳細</h4>
    </div>
  </div>

  <!--画像-->
  <div class="row">
    <div class="col-md-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image.variant( resize: "300" ).processed %>
      <% else %>
        <%= image_tag 'no_image', size: "100x200" %>
      <% end %>
    </div>

    <div class="col-md-8">
      <div class="row">
        <div class="col-3">
          <p>商品名</p>
        </div>
        <div class="col-6">
          <p><%= @item.name %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>商品説明</p>
        </div>
        <div class="col-6">
          <p><%= @item.introduction %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>ジャンル</p>
        </div>
        <div class="col-6">
          <p><%= @item.genre.name %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>
            税込価格</br>
            (税抜価格)
          </p>
        </div>
        <div class="col-6">
          <p>
            <%= @item.add_tax_price.to_s(:dalimited) %>
            (<%= @item.price %>)円
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>販売ステータス</p>
        </div>
        <div class="col-5">
          <p class="font-weight-bold" style="color:limegreen;">
            <% if @item.is_active %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-12 text-center">
      <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success px-5" %>
    </div>
  </div>
</div>