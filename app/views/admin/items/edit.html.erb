<div class="container">
  <div class="row my-3">
    <div class="col-10 offset-1">
      <h4>商品編集</h4>
        <% if @item.errors.any? %>
            <%= @item.errors.count %>件のエラーが発生しました
            <ul>
                <% @item.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
  </div>

  <%= form_with model: @item, url: admin_item_path do |f| %>
    <div class="row">
      <div class="col-md-2 offset-2">
        <%= f.label :image_tag, "商品画像", class:"col-form-label" %>
      </div>
      <div class="col-md-5">
        <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2 offset-2">
        <%= f.label :name, "商品名", class:"col-form-label" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2 offset-2">
        <%= f.label :introduction, "商品説明", class:"col-form-label" %>
      </div>
      <div class="col-md-4">
        <%= f.text_area :introduction, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2 offset-2">
        <%= f.label :genre, "ジャンル", class:"col-form-label" %>
      </div>
      <div class="col-md-4">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class:"form-select" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2 offset-2">
        <%= f.label :price, "税抜価格", class:"col-form-label" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :price, class:"form-control" %>
      </div>
    </div>

    <div class="row my-4">
      <div class="col-md-2 offset-2">
        <p>販売ステータス</p>
      </div>
      <div class="col-md-1 mx-3">
         <%= f.radio_button :is_active, true, class:"form-check-input", id:"radio1" %>
         <%= f.label :is_active, "販売中", value: true, class:"form-check-label", for:"radio1" %>
      </div>
      <div class="col-md-2">
         <%= f.radio_button :is_active, false, class:"form-check-input", id:"radio2" %>
         <%= f.label :is_active, "販売停止中", value: false, class:"form-check-label", for:"radio2" %>
      </div>
    </div>

    <div class="row">
      <div class="col-12 text-center">
        <%= f.submit "変更を保存", class: "btn btn-primary bg-success p-2 px-4" %>
      </div>
    </div>
  <% end %>
</div>