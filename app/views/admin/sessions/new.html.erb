<div class="container">
  <div class="row">
    <div class="col-10 offset-2">
      <h2>管理者ログイン</h2>
    </div>
  </div>


  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="row my-3">
      <div class="col-md-2 offset-2">
        <%= f.label :email, "メールアドレス", class:"col-form-label" %>
      </div>
      <div class="col-md-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>


    <div class="row my-3">
      <div class="col-md-2 offset-2">
        <%= f.label :password, "パスワード", class:"col-form-label" %>
      </div>
      <div class="col-md-5">
        <%= f.password_field :password, autocomplete: "current_password", class:"form-control" %>
      </div>

    </div>

    <div class="row my-4">
      <div class="col-2 offset-2"></div>
      <div class="col-md-5">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "admin/shared/links" %>
