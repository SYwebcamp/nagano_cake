<div class="container">
  <div class="row my-5">
    <div class="col-10 offset-1">
      <h4><%= @customer.full_name %>さんの会員情報編集</h4>
        <% if @customer.errors.any? %>
            <%= @customer.errors.count %>件のエラーが発生しました
            <ul>
                <% @customer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <div class="row my-3">
      <div class="col-md-2">
        <%= f.label :first_name, "氏名", class:"col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, class:"form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2">
        <%= f.label :first_name_kana, "フリガナ", class:"col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, class:"form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2">
        <%= f.label :postal_code, "郵便番号", class:"col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :postal_code, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2">
        <%= f.label :address, "住所", class:"col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :address, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2">
        <%= f.label :telephone_number, "電話番号", class:"col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :telephone_number, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2">
        <%= f.label :email, "メールアドレス", class:"col-form-label" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :email, class:"form-control" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-2">
        <p>会員ステータス</p>
      </div>
      <div class="col-md-2">
        <%= f.radio_button :is_deleted, :false, class:"form-check-input", id:"radio1" %>
        <%= label :is_deleted, "有効", value: :false, class:"form-check-label", for:"radio1" %>
      </div>
      <div class="col-md-3">
        <%= f.radio_button :is_deleted, true, class:"form-check-input", id:"radio2" %>
        <%= label :is_deleted, "退会", value: :true, class:"form-check-label", for:"radio2" %>
      </div>
    </div>

    <div class="row">
      <div class="col-10 offset-2">
        <%= f.submit "変更を保存", class:"btn btn-success p-2 px-4" %>
      </div>
    </div>

    </p>
  <% end %>
</div>