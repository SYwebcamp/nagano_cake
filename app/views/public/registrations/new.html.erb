<h2>新規会員登録</h2>
<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <span>名前</span>
      <%= f.label :first_name, "（姓）" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "令和"  %>
    </div>

      <div class="field">
        <%= f.label :last_name, "（名）" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "道子" %>
      </div>


  <div class="field">
    <span>フリガナ</span>
    <%= f.label :first_name_kana, "(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "レイワ" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "(メイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :placeholder => "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :placeholder => "0000000" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_area :address, autofocus: true, autocomplete: "address", :placeholder => "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", :placeholder => "00000000000" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class="login_path">
  <h5>既に登録済みの方</h5>
  <p>
    <%= render partial: "public/shared/links", locals: { link_url: "new_customer_session_path" } %>
    からログインしてください。
  </p>

</div>


