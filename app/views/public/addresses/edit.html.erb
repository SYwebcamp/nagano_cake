<div class="container">
  <div class="row my-5">
    <div class="col-10 offset-2">
      <h4>配送先編集</h4>
      <% if @address.errors.any? %>
        <%= @address.errors.count %>件のエラーが発生しました
        <ul>
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>


  <%= form_with model: @address, url: address_path do |f| %>
  <div class="row my-3">
    <div class="col-md-3">
      <%= f.label :postal_code, "郵便番号（ハイフンなし)", class:"col-form-label" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      <%= f.label :address, "住所", class:"col-form-label" %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      <%= f.label :name, "宛名", class:"col-form-label" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
