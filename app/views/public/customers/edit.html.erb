<h3>会員情報編集</h3>

<%= form_with model: @customer, url:  customer_path do |f| %>
  <p>
    <%= f.label :first_name, "氏名" %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :first_name_kana, "フリガナ" %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
  </p>
  <p>
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %>
  </p>
  <p>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %>
  </p>
  <p>
    <%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email %>
  </p>

  <%= f.submit "編集内容を保存", class:"btn btn-success" %>

  <%= link_to "退会する", check_customers_path %>
<% end %>
