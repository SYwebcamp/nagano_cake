<h4>注文履歴一覧</h4>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= l order_detail.created_at, format: :short %></td>
      <td><%= order_detail.order.shipping_address %></td>
      <td>
        <%= order_detail.item.name %>
      </td>
      <td><%= order_detail.order.amount_paid %></td>
      <td><%= order_detail.production_status_i18n %></td>
      <td><%= link_to "表示する",  order_path(order_detail), class: "btn btn-primary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>