<h3>ショッピングカート</h3>
<span>
  <%= link_to "カートを空にする", all_destroy_public_cart_items_path, calss: "btn btn-primary bg-danger", method: :delete %>
</span>
<table class="table">
  <thead>
    <tr>
      <th class="name">商品名</th>
      <th class="price">単価(税込)</th>
      <th class="amount">数量</th>
      <th class="subtotal">小計</th>
      <th class="delete"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", public_cart_item_path(cart_item), class: "btn btn-primary bg-danger", method: :delete %></td>
      <% @total += cart_item.subtotal %>
    </tr>
    <% end %>
    <span><%= link_to "買い物を続ける", public_items_path %></span>
    <td>合計金額</td>
    <td><%= @total %></td>
    <td><%= link_to "情報入力へ進む",  new_public_order_path %></td>
  </tbody>
</table>

